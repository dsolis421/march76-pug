extends layout

block content
  include newstaticheader.pug
  section.subpage-main-section
    .subpage-row
      .gallery-column
        each a in images1
          figure
            img(src=`${a.lowres}`,
              data-highres=`${a.highres}`,
              data-name=`${a.name}`,
              data-camera=`${a.camera}`,
              data-lense=`${a.lense}`,
              data-focallength=`${a.focallength}`,
              data-fstop=`${a.fstop}`,
              data-iso=`${a.iso}`,
              data-shutterspeed=`${a.shutterspeed}`,
              data-category=`${a.category}`)
            figcaption= a.name
      .gallery-column
        each b in images2
          figure
            img(src=`${b.lowres}`,
              data-highres=`${b.highres}`,
              data-name=`${b.name}`,
              data-camera=`${b.camera}`,
              data-lense=`${b.lense}`,
              data-focallength=`${b.focallength}`,
              data-fstop=`${b.fstop}`,
              data-iso=`${b.iso}`,
              data-shutterspeed=`${b.shutterspeed}`,
              data-category=`${b.category}`)
            figcaption= b.name
    #imageModal.gallery-modal
      img#enlargedImage.modal-content
      #modalCaption
        .image-details
        .image-details
        .image-details
  include staticfooter.pug
block scripts
  script(src='/javascripts/galleryscript.js')
