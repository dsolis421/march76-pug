extends layout

block metas
  meta(property="og:url", content=`https://march76.com/gallery`)
  meta(property="og:site_name", content="March 76")
  meta(property="og:description", content=`Danny Solis is a creative photographer based in Austin, TX.  His gallery is a cross-section of his best work.`)
  meta(property="og:image", content='https://march76.com/images/m76-pageimage-wht.png')
  meta(name="twitter:card", content="summary_large_image")
  meta(name="twitter:image:src", content='https://march76.com/images/m76-pageimage-wht.png')

block content
  section.subpage-main-section
    .subpage-row
      .gallery-column
        each a in collections1
          .gallery-collection(style=`background-image: url(${a.frontpageimage})`)
            a(href=`/gallery/${a.quick}`)
              .gallery-collection-hover
                h2= a.name
      .gallery-column
        each b in collections2
          .gallery-collection(style=`background-image: url(${b.frontpageimage})`)
            a(href=`/gallery/${b.quick}`)
              .gallery-collection-hover
                h2= b.name
block scripts
  script(src='/javascripts/galleryscript.js')
